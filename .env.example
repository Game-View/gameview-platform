# Game View Platform - Environment Variables
# Copy this file to .env.local and fill in your values

# ============================================
# DATABASE (Neon)
# ============================================
# Get these from your Neon dashboard: https://neon.tech
DATABASE_URL="postgresql://user:password@ep-xxx.us-east-2.aws.neon.tech/gameview?sslmode=require"
DIRECT_URL="postgresql://user:password@ep-xxx.us-east-2.aws.neon.tech/gameview?sslmode=require"

# ============================================
# AUTHENTICATION (Clerk)
# ============================================
# Get these from your Clerk dashboard: https://clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_xxx"
CLERK_SECRET_KEY="sk_test_xxx"
CLERK_WEBHOOK_SECRET="whsec_xxx"

# Clerk URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/"
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/onboarding"

# ============================================
# AWS (S3 + CloudFront)
# ============================================
AWS_REGION="us-east-2"
AWS_ACCESS_KEY_ID="AKIA..."
AWS_SECRET_ACCESS_KEY="xxx"
AWS_S3_BUCKET="gameview-content"
CLOUDFRONT_DOMAIN="cdn.gameview.tv"

# ============================================
# PAYMENTS (Stripe)
# ============================================
# Get these from your Stripe dashboard: https://stripe.com
STRIPE_SECRET_KEY="sk_test_xxx"
STRIPE_PUBLISHABLE_KEY="pk_test_xxx"
STRIPE_WEBHOOK_SECRET="whsec_xxx"

# ============================================
# APP CONFIGURATION
# ============================================
NEXT_PUBLIC_APP_URL="http://localhost:3001"
NEXT_PUBLIC_STUDIO_URL="http://localhost:3000"

# Development override - set to "true" to bypass Clerk auth
NEXT_PUBLIC_SKIP_AUTH="false"

# ============================================
# PROCESSING ENGINE
# ============================================
# API key for processing engine authentication
ENGINE_API_KEY="gv_engine_xxx"
