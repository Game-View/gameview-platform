# GameView Platform - Test Environment
# Copy this file to .env for testing
#
# This file contains minimal configuration needed to test the pipeline.
# For production, copy from .env.example instead.

# ============================================
# DATABASE (Required)
# ============================================
# Get from Supabase Dashboard → Settings → Database → Connection string
# Use Transaction Pooler (port 6543) for serverless
DATABASE_URL="postgresql://postgres.[project-ref]:[password]@aws-0-us-east-1.pooler.supabase.com:6543/postgres?pgbouncer=true"

# Session Pooler (port 5432) - for migrations
DIRECT_URL="postgresql://postgres.[project-ref]:[password]@aws-0-us-east-1.pooler.supabase.com:5432/postgres"

# ============================================
# SUPABASE STORAGE (Required)
# ============================================
# Get from Supabase Dashboard → Settings → API
NEXT_PUBLIC_SUPABASE_URL="https://[project-ref].supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="eyJ..."
SUPABASE_SERVICE_ROLE_KEY="eyJ..."

# ============================================
# AUTHENTICATION (Required for UI testing)
# ============================================
# Get from Clerk Dashboard → API Keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_..."
CLERK_SECRET_KEY="sk_test_..."

# Development override - set to "true" for quick testing
# WARNING: Never use in production!
NEXT_PUBLIC_SKIP_AUTH="true"

# ============================================
# MODAL GPU PROCESSING (Optional)
# ============================================
# Deploy Modal worker first:
#   modal deploy packages/processing/modal_worker.py
# Then get the URL from the output
MODAL_ENDPOINT_URL="https://[username]--gameview-processing-trigger.modal.run"

# ============================================
# INTERNAL API URL
# ============================================
# For local development
INTERNAL_API_URL="http://localhost:3000"

# ============================================
# TESTING FLAGS
# ============================================
# Enable mock data mode for UI testing without backend
NEXT_PUBLIC_USE_MOCK_DATA="false"

# Enable debug mode
NEXT_PUBLIC_DEBUG_MODE="true"
