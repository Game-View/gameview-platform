# ===========================================
# Game View Player Platform - Environment Variables
# ===========================================

# Clerk Authentication (Required for production)
# Get keys from https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxx
CLERK_SECRET_KEY=sk_test_xxx

# Clerk URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

# Supabase (Required for production)
# Get keys from https://supabase.com/dashboard
NEXT_PUBLIC_SUPABASE_URL=https://xxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=xxx

# Studio URL (for creator links)
NEXT_PUBLIC_STUDIO_URL=http://localhost:3000

# Optional: Skip auth for local testing
# Set to "true" to bypass Clerk authentication
NEXT_PUBLIC_SKIP_AUTH=false
