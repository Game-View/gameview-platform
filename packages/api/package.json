{
  "name": "@gameview/api",
  "version": "0.1.0",
  "private": true,
  "description": "API layer for Game View platform (tRPC + REST)",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./trpc": {
      "types": "./src/trpc/index.ts",
      "import": "./dist/trpc/index.mjs",
      "require": "./dist/trpc/index.js"
    }
  },
  "files": ["dist", "src"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "dev:prepare": "tsup",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@gameview/database": "workspace:*",
    "@gameview/types": "workspace:*",
    "@trpc/server": "^10.45.0",
    "superjson": "^2.2.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@clerk/nextjs": "^6.0.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  }
}
